<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="#1fbaf3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/content_bar_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/return_bg"
            android:gravity="center_vertical|left"
             />

        <TextView
            android:id="@+id/content_bar_backright"
            android:layout_toRightOf="@id/content_bar_back"
            android:textColor="#fff"
            android:text="兼职库"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/content_bar_title"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="手机赚钱"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/content_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="分享"
            android:textColor="#fff"
            android:textSize="17sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#bfbfbf" >
    </View>

</LinearLayout>